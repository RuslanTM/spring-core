<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="client" class="com.epam.spring.core.model.Client">
        <constructor-arg value="1"/>
        <constructor-arg value="Ivan Petrov"/>
    </bean>

    <bean id="eventLogger" class="com.epam.spring.core.logger.ConsoleEventLogger"/>

    <bean id="app" class="com.epam.spring.core.App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="eventLogger"/>
        <constructor-arg ref="fileEventLogger"/>
        <constructor-arg ref="cacheFileLogger"/>
    </bean>

    <bean id="event" class="com.epam.spring.core.model.Event" scope="prototype">

        <constructor-arg>
            <bean class = "java.util.Date"/>
        </constructor-arg>
        <constructor-arg>
            <bean id = "dateFormat" class = "java.text.DateFormat"
                  factory-method="getDateTimeInstance"/>
        </constructor-arg>
    </bean>

    <bean id="fileEventLogger" class="com.epam.spring.core.logger.FileEventLogger" init-method="init">
        <constructor-arg value = "logs.txt"/>
    </bean>

    <bean id="cacheFileLogger" class="com.epam.spring.core.logger.CacheFileEventLogger" init-method="init" destroy-method="destroy">
        <constructor-arg value="3"/>
        <constructor-arg value="cache_logs.txt"/>
    </bean>

</beans>